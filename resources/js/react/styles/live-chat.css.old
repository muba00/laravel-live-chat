/**
 * Laravel Live Chat - React Component Styles
 * 
 * CSS Architecture:
 * - BEM naming convention: .lc-block__element--modifier
 * - CSS Variables for theming (light/dark mode)
 * - Mobile-first responsive design
 * - No external dependencies
 * 
 * Prefix: .lc- (LiveChat) to avoid conflicts
 */

/* ============================================
   CSS Variables - Design System
   ============================================ */

:root {
  /* Color Palette - Light Mode (Default) */
  --lc-color-primary: #4f46e5; /* Indigo 600 */
  --lc-color-primary-hover: #4338ca; /* Indigo 700 */
  --lc-color-primary-light: #eef2ff; /* Indigo 50 */
  
  --lc-color-background: #ffffff;
  --lc-color-background-secondary: #f9fafb; /* Gray 50 */
  --lc-color-background-tertiary: #f3f4f6; /* Gray 100 */
  --lc-color-background-hover: #f3f4f6; /* Gray 100 */
  
  --lc-color-text: #111827; /* Gray 900 */
  --lc-color-text-secondary: #6b7280; /* Gray 500 */
  --lc-color-text-tertiary: #9ca3af; /* Gray 400 */
  --lc-color-text-inverted: #ffffff;
  
  --lc-color-border: #e5e7eb; /* Gray 200 */
  --lc-color-border-light: #f3f4f6; /* Gray 100 */
  --lc-color-border-focus: #4f46e5;
  
  --lc-color-success: #10b981; /* Green 500 */
  --lc-color-success-light: #d1fae5; /* Green 100 */
  --lc-color-error: #ef4444; /* Red 500 */
  --lc-color-error-light: #fee2e2; /* Red 100 */
  --lc-color-warning: #f59e0b; /* Amber 500 */
  --lc-color-warning-light: #fef3c7; /* Amber 100 */
  --lc-color-info: #3b82f6; /* Blue 500 */
  --lc-color-info-light: #dbeafe; /* Blue 100 */
  
  --lc-color-online: #10b981; /* Green 500 */
  --lc-color-offline: #9ca3af; /* Gray 400 */
  --lc-color-typing: #f59e0b; /* Amber 500 */
  
  /* Spacing Scale */
  --lc-space-xs: 0.25rem; /* 4px */
  --lc-space-sm: 0.5rem; /* 8px */
  --lc-space-md: 0.75rem; /* 12px */
  --lc-space-lg: 1rem; /* 16px */
  --lc-space-xl: 1.5rem; /* 24px */
  --lc-space-2xl: 2rem; /* 32px */
  --lc-space-3xl: 3rem; /* 48px */
  
  /* Typography */
  --lc-font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 
                    'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans',
                    'Helvetica Neue', sans-serif;
  --lc-font-family-mono: 'SFMono-Regular', Consolas, 'Liberation Mono', Menlo, Courier, monospace;
  
  --lc-font-size-xs: 0.75rem; /* 12px */
  --lc-font-size-sm: 0.875rem; /* 14px */
  --lc-font-size-base: 1rem; /* 16px */
  --lc-font-size-lg: 1.125rem; /* 18px */
  --lc-font-size-xl: 1.25rem; /* 20px */
  
  --lc-font-weight-normal: 400;
  --lc-font-weight-medium: 500;
  --lc-font-weight-semibold: 600;
  --lc-font-weight-bold: 700;
  
  --lc-line-height-tight: 1.25;
  --lc-line-height-normal: 1.5;
  --lc-line-height-relaxed: 1.75;
  
  /* Border Radius */
  --lc-radius-sm: 0.25rem; /* 4px */
  --lc-radius-md: 0.5rem; /* 8px */
  --lc-radius-lg: 0.75rem; /* 12px */
  --lc-radius-xl: 1rem; /* 16px */
  --lc-radius-full: 9999px;
  
  /* Shadows */
  --lc-shadow-xs: 0 1px 2px 0 rgb(0 0 0 / 0.05);
  --lc-shadow-sm: 0 1px 3px 0 rgb(0 0 0 / 0.1), 0 1px 2px -1px rgb(0 0 0 / 0.1);
  --lc-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.1);
  --lc-shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.1), 0 4px 6px -4px rgb(0 0 0 / 0.1);
  --lc-shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.1), 0 8px 10px -6px rgb(0 0 0 / 0.1);
  
  /* Z-Index Scale */
  --lc-z-base: 1;
  --lc-z-dropdown: 1000;
  --lc-z-sticky: 1020;
  --lc-z-modal: 1050;
  --lc-z-popover: 1060;
  --lc-z-tooltip: 1070;
  
  /* Transitions */
  --lc-transition-fast: 150ms ease-in-out;
  --lc-transition-base: 200ms ease-in-out;
  --lc-transition-slow: 300ms ease-in-out;
  
  /* Component Specific */
  --lc-avatar-size-sm: 2rem; /* 32px */
  --lc-avatar-size-md: 2.5rem; /* 40px */
  --lc-avatar-size-lg: 3rem; /* 48px */
  
  --lc-input-height: 2.75rem; /* 44px */
  --lc-button-height: 2.5rem; /* 40px */
  
  --lc-sidebar-width: 20rem; /* 320px */
  --lc-sidebar-width-collapsed: 0;
  
  --lc-message-max-width: 70%;
}

/* Dark Mode Variables */
[data-theme="dark"],
.lc-theme-dark {
  --lc-color-primary: #6366f1; /* Indigo 500 */
  --lc-color-primary-hover: #4f46e5; /* Indigo 600 */
  --lc-color-primary-light: #312e81; /* Indigo 900 */
  
  --lc-color-background: #111827; /* Gray 900 */
  --lc-color-background-secondary: #1f2937; /* Gray 800 */
  --lc-color-background-tertiary: #374151; /* Gray 700 */
  --lc-color-background-hover: #374151; /* Gray 700 */
  
  --lc-color-text: #f9fafb; /* Gray 50 */
  --lc-color-text-secondary: #9ca3af; /* Gray 400 */
  --lc-color-text-tertiary: #6b7280; /* Gray 500 */
  --lc-color-text-inverted: #111827;
  
  --lc-color-border: #374151; /* Gray 700 */
  --lc-color-border-light: #4b5563; /* Gray 600 */
  --lc-color-border-focus: #6366f1;
  
  --lc-color-success: #10b981;
  --lc-color-success-light: #064e3b; /* Green 900 */
  --lc-color-error: #ef4444;
  --lc-color-error-light: #7f1d1d; /* Red 900 */
  --lc-color-warning: #f59e0b;
  --lc-color-warning-light: #78350f; /* Amber 900 */
  --lc-color-info: #3b82f6;
  --lc-color-info-light: #1e3a8a; /* Blue 900 */
  
  --lc-shadow-xs: 0 1px 2px 0 rgb(0 0 0 / 0.3);
  --lc-shadow-sm: 0 1px 3px 0 rgb(0 0 0 / 0.4), 0 1px 2px -1px rgb(0 0 0 / 0.4);
  --lc-shadow-md: 0 4px 6px -1px rgb(0 0 0 / 0.4), 0 2px 4px -2px rgb(0 0 0 / 0.4);
  --lc-shadow-lg: 0 10px 15px -3px rgb(0 0 0 / 0.4), 0 4px 6px -4px rgb(0 0 0 / 0.4);
  --lc-shadow-xl: 0 20px 25px -5px rgb(0 0 0 / 0.4), 0 8px 10px -6px rgb(0 0 0 / 0.4);
}

/* ============================================
   Base Reset & Global Styles
   ============================================ */

.lc-root {
  box-sizing: border-box;
  font-family: var(--lc-font-family);
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.lc-root *,
.lc-root *::before,
.lc-root *::after {
  box-sizing: inherit;
}

/* ============================================
   Main Container
   ============================================ */

.lc-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background-color: var(--lc-color-background);
  color: var(--lc-color-text);
  font-family: var(--lc-font-family);
  font-size: var(--lc-font-size-base);
  line-height: var(--lc-line-height-normal);
  overflow: hidden;
  border-radius: var(--lc-radius-lg);
  box-shadow: var(--lc-shadow-lg);
}

/* ============================================
   Layout Structure
   ============================================ */

.lc-layout {
  display: flex;
  flex: 1;
  overflow: hidden;
  position: relative;
}

/* Sidebar */
.lc-sidebar {
  display: flex;
  flex-direction: column;
  width: var(--lc-sidebar-width);
  background-color: var(--lc-color-background-secondary);
  border-right: 1px solid var(--lc-color-border);
  overflow: hidden;
  transition: width var(--lc-transition-base);
}

.lc-sidebar--collapsed {
  width: var(--lc-sidebar-width-collapsed);
}

/* Main Content Area */
.lc-main {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow: hidden;
  background-color: var(--lc-color-background);
}

/* ============================================
   Utility Classes
   ============================================ */

/* Scrollbar Styling */
.lc-scrollbar {
  scrollbar-width: thin;
  scrollbar-color: var(--lc-color-border) transparent;
}

.lc-scrollbar::-webkit-scrollbar {
  width: 8px;
  height: 8px;
}

.lc-scrollbar::-webkit-scrollbar-track {
  background: transparent;
}

.lc-scrollbar::-webkit-scrollbar-thumb {
  background-color: var(--lc-color-border);
  border-radius: var(--lc-radius-full);
  border: 2px solid transparent;
  background-clip: padding-box;
}

.lc-scrollbar::-webkit-scrollbar-thumb:hover {
  background-color: var(--lc-color-text-tertiary);
}

/* Visually Hidden (for accessibility) */
.lc-sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  white-space: nowrap;
  border-width: 0;
}

/* Focus Visible */
.lc-focus-ring:focus-visible {
  outline: 2px solid var(--lc-color-border-focus);
  outline-offset: 2px;
}

/* ============================================
   Responsive Breakpoints
   ============================================ */

/* Mobile: < 768px (default - mobile first) */

/* Tablet: >= 768px */
@media (min-width: 768px) {
  .lc-sidebar {
    width: var(--lc-sidebar-width);
  }
}

/* Desktop: >= 1024px */
@media (min-width: 1024px) {
  .lc-container {
    max-width: 1200px;
  }
}

/* Mobile-specific overrides */
@media (max-width: 767px) {
  .lc-layout {
    position: relative;
  }
  
  .lc-sidebar {
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    width: 100%;
    max-width: var(--lc-sidebar-width);
    z-index: var(--lc-z-modal);
    transform: translateX(-100%);
    transition: transform var(--lc-transition-base);
  }
  
  .lc-sidebar--visible {
    transform: translateX(0);
  }
  
  .lc-main {
    width: 100%;
  }
}

/* ============================================
   Animation Keyframes
   ============================================ */

@keyframes lc-fade-in {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

@keyframes lc-slide-up {
  from {
    transform: translateY(10px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes lc-slide-down {
  from {
    transform: translateY(-10px);
    opacity: 0;
  }
  to {
    transform: translateY(0);
    opacity: 1;
  }
}

@keyframes lc-spin {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

@keyframes lc-pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

/* ============================================
   Print Styles
   ============================================ */

@media print {
  .lc-container {
    box-shadow: none;
    border: 1px solid var(--lc-color-border);
  }
  
  .lc-sidebar {
    display: none;
  }
}

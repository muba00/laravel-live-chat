{
    "name": "@muba00/laravel-live-chat-react",
    "version": "0.1.0",
    "description": "React components for Laravel Live Chat package",
    "type": "module",
    "main": "./react/index.ts",
    "types": "./react/index.ts",
    "exports": {
        ".": {
            "import": "./react/index.ts",
            "types": "./react/index.ts"
        },
        "./dist/live-chat.css": "./dist/live-chat.css",
        "./styles": "./react/styles/index.css",
        "./styles/*": "./react/styles/*"
    },
    "files": [
        "react/**/*",
        "dist/**/*",
        "README.md"
    ],
    "scripts": {
        "dev": "vite",
        "build": "NODE_ENV=production vite build",
        "build:dev": "vite build",
        "preview": "vite preview",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "storybook": "storybook dev -p 6006",
        "build-storybook": "storybook build",
        "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "type-check": "tsc --noEmit"
    },
    "peerDependencies": {
        "laravel-echo": "^1.16.0",
        "pusher-js": "^8.0.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0"
    },
    "devDependencies": {
        "@storybook/addon-essentials": "^7.6.0",
        "@storybook/addon-interactions": "^7.6.0",
        "@storybook/addon-links": "^7.6.0",
        "@storybook/blocks": "^7.6.0",
        "@storybook/react": "^7.6.0",
        "@storybook/react-vite": "^7.6.0",
        "@storybook/test": "^7.6.0",
        "@testing-library/jest-dom": "^6.1.5",
        "@testing-library/react": "^14.1.2",
        "@testing-library/user-event": "^14.5.1",
        "@types/node": "^20.10.0",
        "@types/react": "^18.2.43",
        "@types/react-dom": "^18.2.17",
        "@typescript-eslint/eslint-plugin": "^6.14.0",
        "@typescript-eslint/parser": "^6.14.0",
        "@vitejs/plugin-react": "^4.2.1",
        "@vitest/ui": "^1.0.4",
        "autoprefixer": "^10.4.21",
        "cssnano": "^7.1.1",
        "eslint": "^8.55.0",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "eslint-plugin-storybook": "^0.6.15",
        "jsdom": "^23.0.1",
        "laravel-echo": "^1.16.0",
        "postcss": "^8.5.6",
        "postcss-import": "^16.1.1",
        "pusher-js": "^8.4.0-rc2",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "storybook": "^7.6.0",
        "typescript": "^5.3.3",
        "vite": "^5.0.8",
        "vitest": "^1.0.4"
    },
    "keywords": [
        "laravel",
        "chat",
        "live-chat",
        "react",
        "websocket",
        "real-time"
    ],
    "author": "muba00",
    "license": "MIT"
}
